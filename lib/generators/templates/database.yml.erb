default: &default
  adapter: postgresql
  encoding: unicode
  pool: 5
  host: db
  username: docker
  password: docker

development:
  <<: *default
  database: <%= app_name %>_dev

staging:
  <<: *default
  database: <%= app_name %>_staging

production:
  <<: *default
  database: <%= app_name %>_production

test:
  <<: *default
  database: <%= app_name %>_test